<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:mvc="http://www.springframework.org/schema/mvc"
	   xsi:schemaLocation="
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven enable-matrix-variables="true"></mvc:annotation-driven>

	<!-- Handles HTTP GET requests for /resources/** by efficiently serving up static resources in the ${webappRoot}/resources/ directory -->
	<mvc:resources mapping="/resources/**" location="/resources/" />

	<!-- Resolves views selected for rendering by @Controllers to .jsp resources in the /WEB-INF/views directory -->
	<bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
		<property name="viewResolvers">
			<list>
				<bean class="org.springframework.web.servlet.view.BeanNameViewResolver"/>
				<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
					<property name="prefix" value="/WEB-INF/jsp/"/>
					<property name="suffix" value=".jsp"/>
				</bean>
			</list>
		</property>
		<property name="defaultViews">
			<list>
				<bean class="org.springframework.web.servlet.view.json.MappingJackson2JsonView"/>
			</list>
		</property>
	</bean>

	<!-- Only needed because we require fileupload in the org.springframework.samples.mvc.fileupload package -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver" />

	<!-- Imports user-defined @Controller beans that process client requests -->
	<import resource="controllers.xml" />

	<bean class="backtype.storm.utils.DRPCClient">
		<constructor-arg name="conf">
			<map>
				<entry key="storm.thrift.transport" value="backtype.storm.security.auth.SimpleTransportPlugin"></entry>
				<entry key="storm.nimbus.retry.times" value="3"></entry>
				<entry key="storm.nimbus.retry.interval.millis" value="1000"></entry>
				<entry key="drpc.max_buffer_size" value="1048576"></entry>
				<entry key="storm.nimbus.retry.intervalceiling.millis" value="1000"></entry>
			</map>
		</constructor-arg>
		<constructor-arg name="host" value="192.168.12.10"></constructor-arg>
		<constructor-arg name="port"  value="3772"></constructor-arg>
		<constructor-arg name="timeout" value="10000"></constructor-arg>
	</bean>
	
</beans>
